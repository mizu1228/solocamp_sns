<%= render '/shared/header'%>

<h2>UserPage</h2>

<% if @user.image.attached? %>
  <div class="user-img-content">
    <%= image_tag @user.image, class:"user-img" %>
  </div>
<% else %>
  <div class="default-img">
    <%= image_tag 'default_tent.png', width:"200", height:"200" %>
  </div>
<% end %>

<div class="user-name-group">
  <li class="name-left">UserName:</li>
  <li class="name-right"><%= @user.name %></li>
</div>

<div class="user-introduce">
  Introduce:
  <span>
  <%= @user.introduce %>
  </span>
</div>

<div class="style-lists">
  <ul class="camp-style">
    <li class="style-title">スタイル
    </li>
    <li class="style-name">
      <% if @user.camp_style != nil %>
        <%= @user.camp_style.name %>
      <% else %>
        --
      <% end %>
    </li>
  </ul>
  <ul class="camp-style">
    <li class="style-title">移動手段
    </li>
    <li class="style-name">
      <% if @user.trans_style != nil %>
        <%= @user.trans_style.name %>
      <% else %>
        --
      <% end %>
    </li>
  </ul>
  <ul class="camp-style">
    <li class="style-title">活動時期
    </li>
    <li class="style-name">
      <% if @user.season != nil %>
        <%= @user.season.name %>
      <% else %>
        --
      <% end %>
    </li>
  </ul>
  <ul class="camp-style">
    <li class="style-title">活動場所
    </li>
    <li class="style-name">
      <% if @user.prefecture != nil %>
        <%= @user.prefecture.name %>
      <% else %>
        --
      <% end %>
    </li>
  </ul>
</div>

<div class="visit-u-edit">
<% if @user.id == current_user.id %>
  <%= link_to "EDIT", edit_user_registration_path(current_user) %>
<% end %>
</div>

  <div id="follower">
    <h5 >フォロワー<%= @user.followers.count %>人</h5>
  </div>
  <div id="follow">
    <h5 >フォロー<%= @user.followings.count %>人</h5>
  </div>
  <div id="follow-list">
    <h5>フォローリスト</h5>
      <% @user.followings.each do |following| %>
        <ul>
          <li><%= link_to "#{following.name}", user_path(following) %></li>
        </ul>
      <% end %>
  </div>
  <div>
      <%= render "follow_form" %>
  </div>


<div class="user-tweet-list">
  <%= @user.name %>'s Tweet List
</div>