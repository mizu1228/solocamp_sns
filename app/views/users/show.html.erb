<%= render '/shared/header'%>

<h2>UserPage</h2>

<% if @user.image.attached? %>
  <div class="user-img">
    <%= image_tag @user.image, width:"200", height:"200" %>
  </div>
<% else %>
  <div class="user-img">
    <%# <%= image_tag @user.image, width:"200", height:"200" %>
    Display Sample-image
  </div>
<% end %>

<div class="user-name">
  UserName: <%= @user.name %>
</div>

<div class="user-introduce">
  Introduce:
  <span>
  <%= @user.introduce %>
  </span>
</div>

<div class="visit-u-edit">
<% if @user.id == current_user.id %>
  <%= link_to "EDIT", edit_user_registration_path(current_user) %>
<% end %>
</div>

<% if current_user != @user %>
  <% if current_user.following?(@user) %>
    <%= form_for(current_user.relationships.find_by(follow_id: @user.id), url: relationships_path, html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, @user.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, @user.id %>
      <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>

<div class="user-tweet-list">
  <%= @user.name %>'s Tweet List
</div>