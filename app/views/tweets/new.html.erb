<div class="tweet-content">
<div class="tweet-form">
  <div class="error-messages">
    <%= render 'shared/error_messages', resource: @tweets_tag %>
  </div>
  <%= form_with model: @tweets_tag, url: tweets_path, local: true do |f| %>

  <h2 class="t-new-title">
    New Diary
  </h2>
  
  <div class="tweet-field">
    <div id="img-prv">
      <div id="img-select">
        <%= f.label :image, class:"img-upload-btn" %>
        <%= f.file_field :image, class:"img-upload" %>
      </div>
    </div>
  </div>

  <div class="tweet-field">
    <%= f.text_area :text, placeholder: '本文を入力(400字以内)', maxlength: '400', class:"field-tweet-text"%>
  </div>

  <div class="select-visit">
    <%= f.collection_select(:camp_site_id, CampSite.all, :id, :site, {include_blank: "サイトを選択"}, {class:"site-select"}) %>
  </div>

  <div class="t-btn-area">
    <div class="back-btn-area">
      <div class="u-back-btn">
        <%= link_to 'BACK', root_path, class:"u-back" %>
      </div>
    </div>
    <div class="send-btn-area">
      <div class="t-send-btn">
        <%= f.submit "SEND", class:"t-send" %>
      </div>
    </div>
  </div>
  
  <% end %>
  
</div>
<%= render 'shared/sidebar' %>
</div>