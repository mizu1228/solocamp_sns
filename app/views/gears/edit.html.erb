<%= render 'shared/header' %>
<%= render 'shared/error_messages', resource: @gear %>

<h2 class="edit-gear-form">Registration New Gear</h2>

<div class="edit-gear-box">
  <%= form_with model: @gears_maker, url: gear_path, local: true do |f| %>

    <div class="field">
    <%= f.label 'ジャンル' %><br />
    <%= f.collection_select(:gear_genre_id, GearGenre.all, :id, :name, {}, { class:"gear-genre-select"}) %>
    </div>

    <div class="field">
    <%= f.label 'メーカー' %><br />
    <%= f.text_field :maker_name, id:"maker_name" %>
    </div>
    <div id="search_result"></div>

    <div class="field" id="img-select">
    <%= f.label '画像' %><br />
    <%= f.file_field :image %>
    </div>
    <div id="img-prv"></div>

    <div class="field">
    <%= f.label 'ギア名' %><br />
    <%= f.text_field :gear_name %>
    </div>

    <div class="field">
    <%= f.label '説明' %><br />
    <%= f.text_area :explanation %>
    </div>

    <div class="send-btn">
    <%= f.submit 'SEND' %>
    </div>

  <% end %>
</div>

<div class="back-btn">
  <p><%= link_to "<< Back to Own Gear", gears_path %></p>
</div>

<div class="destroy-btn">
  <%= link_to "Delete", gear_path(@gear), method: :delete, data: { confirm: "Are you sure? "} %>
</div>